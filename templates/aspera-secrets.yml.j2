apiVersion: template.openshift.io/v1
kind: Template
labels:
  template: aspera-secrets
  app: {{ aspera_config_common_name }}
metadata:
  annotations:
    description: Aspera application secret files
    iconClass: icon-amq
    openshift.io/display-name: Aspera application secrets
  labels:
    app: {{ aspera_config_common_name }}
  name: {{ aspera_config_common_name }}-secrets-template
objects:
- apiVersion: v1
  kind: Secret
  metadata:
    name: {{ aspera_config_common_name }}-secrets
    namespace: {{ aspera_config_namespace }}
    labels:
      app: {{ aspera_config_common_name }}
  type: Opaque
  data:
    aspera: {{ aspera_secrets.aspera_password }}
