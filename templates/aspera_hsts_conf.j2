<?xml version='1.0' encoding='UTF-8'?>
<CONF version="2">
    <central_server>
        <port>40001</port>
        <address>127.0.0.1</address>
    </central_server>
    <default>
        <transfer>
            <out>
                <bandwidth>
                    <aggregate>
                        <trunk_id>101</trunk_id>
                    </aggregate>
                </bandwidth>
            </out>
            <protocol_options>
                <bind_udp_port>{{ aspera_config_sshd_internal_port }}</bind_udp_port>
            </protocol_options>
            <in>
                <bandwidth>
                    <aggregate>
                        <trunk_id>102</trunk_id>
                    </aggregate>
                </bandwidth>
            </in>
        </transfer>
        <authorization>
            <transfer>
                <out>
                    <value>allow</value>
                </out>
                <in>
                    <value>allow</value>
                </in>
            </transfer>
        </authorization>
    </default>
    <trunks>
        <trunk>
            <id>100</id>
            <on>false</on>
            <capacity>
                <schedule format="ranges">45000</schedule>
            </capacity>
        </trunk>
        <trunk>
            <id>101</id>
            <capacity>
                <schedule format="ranges">45000</schedule>
            </capacity>
        </trunk>
        <trunk>
            <id>102</id>
            <capacity>
                <schedule format="ranges">45000</schedule>
            </capacity>
        </trunk>
    </trunks>
    <aaa>
        <realms>
            <realm>
                <users>
                    <user>
                        <name>{{ aspera_config_username }}</name>
                        <file_system>
                            <access>
                                <paths>
                                    <path>
                                        <restrictions>
                                            <restriction>file:////desbs/stg/*</restriction>
                                        </restrictions>
                                    </path>
                                </paths>
                            </access>
                        </file_system>
                        <authorization>
                            <transfer>
                                <in>
                                    <value>allow</value>
                                </in>
                                <out>
                                    <value>allow</value>
                                </out>
                            </transfer>
                        </authorization>
                    </user>
                </users>
            </realm>
        </realms>
    </aaa>
    <server>
        <activity_logging>true</activity_logging>
    </server>
</CONF>
